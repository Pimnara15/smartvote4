<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".windowcheck">

    <EditText
        android:id="@+id/text_id"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="number"
        android:text="กรอกเลขบัตรประชาชน"
        android:textColor="#BDB7B7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_check"
        android:layout_width="202dp"
        android:layout_height="52dp"
        android:text="ตรวจสอบสิทธิเลือกตั้ง"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_id"
        app:layout_constraintStart_toStartOf="@+id/text_id"
        app:layout_constraintTop_toBottomOf="@+id/text_id" />
</androidx.constraintlayout.widget.ConstraintLayout>